{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/staking/:path*",
      "destination": "/api/staking/[...path].js"
    },
    {
      "source": "/api/ipfs-proxy",
      "destination": "/api/ipfs-proxy.js"
    },
    {
      "source": "/api/users/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/staking/distribute-points",
      "schedule": "0 0 * * *"
    }
  ]
}
